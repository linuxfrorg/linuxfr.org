%footer#bigfooter
  %nav#last_comments
    %h1 Derniers commentaires
    %ul
      - @last_comments.each do |comment|
        %li= link_to comment.title, path_for_content(comment.node.content) + "#comment-#{comment.id}"
  %nav#popular_tags
    %h1 Étiquettes (tags) populaires
    %ul.tag_cloud
      - @popular_tags.each do |tag|
        %li= link_to tag.name, "/tags/#{tag.name}/public"
  %section#friends
    %h1 Sites amis
    %ul
      - @friend_sites.each do |site|
        %li= link_to site.title, site.url
  %nav#about_us
